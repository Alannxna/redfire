{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@redfire/*": ["./packages/*/src"],
      "@redfire/ui-components": ["./packages/ui-components/src"],
      "@redfire/theme-system": ["./packages/theme-system/src"],
      "@redfire/shared-types": ["./packages/shared-types/src"],
      "@redfire/api-client": ["./packages/api-client/src"],
      "@/contexts/*": ["./contexts/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "contexts/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "./packages/shared-types"
    },
    {
      "path": "./packages/api-client"
    },
    {
      "path": "./packages/theme-system"
    },
    {
      "path": "./packages/ui-components"
    },
    {
      "path": "./apps/web-app"
    }
  ]
}