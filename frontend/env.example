# RedFire Frontend Environment Configuration
# 复制此文件为 .env.local 并根据需要修改配置

# API服务器配置
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8001

# 应用配置
VITE_APP_NAME=RedFire
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=专业量化交易平台

# 环境设置
NODE_ENV=development
VITE_NODE_ENV=development

# 日志级别
VITE_LOG_LEVEL=debug

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false

# 第三方服务
VITE_SENTRY_DSN=
VITE_GA_TRACKING_ID=

# 开发工具
VITE_DEVTOOLS=true
VITE_HOT_RELOAD=true

# 性能配置
VITE_CHUNK_SIZE_LIMIT=1000
VITE_ENABLE_COMPRESSION=true

# 缓存配置
VITE_CACHE_DURATION=3600000

# 认证配置
VITE_AUTH_TOKEN_KEY=redfire_auth_token
VITE_REFRESH_TOKEN_KEY=redfire_refresh_token

# WebSocket配置
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# 交易配置
VITE_DEFAULT_MARKET=SH
VITE_TRADING_HOURS_START=09:30
VITE_TRADING_HOURS_END=15:00

# 数据源配置
VITE_DATA_PROVIDER=wind
VITE_REALTIME_UPDATE_INTERVAL=1000

# 主题配置
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=redfire_theme

# 移动端配置
VITE_MOBILE_BREAKPOINT=768
VITE_ENABLE_TOUCH_GESTURES=true

# 测试配置
VITE_TEST_TIMEOUT=30000
VITE_E2E_BASE_URL=http://localhost:3000
