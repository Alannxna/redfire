# VnPy Web后端配置文件
# MySQL数据库配置

# ===== 应用基础配置 =====
APP_NAME=VnPy Web Backend
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=vnpy-web-secret-key-2024

# ===== 服务器配置 =====
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ===== 数据库配置 =====
# 使用MySQL数据库
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=vnpy

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# ===== 认证配置 =====
JWT_SECRET_KEY=vnpy-jwt-secret-key-2024
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ===== Redis配置 =====
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ===== 文件存储配置 =====
# 日志目录
LOG_DIR=./logs

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ===== VnPy配置 =====
VNPY_DATA_DIR=./vnpy_data
VNPY_LOG_DIR=./vnpy_logs
VNPY_CONFIG_DIR=./vnpy_config

# ===== 安全配置 =====
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# ===== 性能配置 =====
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5

# ===== 开发配置 =====
RELOAD=false
ACCESS_LOG=true
