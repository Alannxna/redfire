# RedFire Web UI 环境配置模板
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=RedFire Web UI
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-secret-key-here

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=postgresql://redfire:redfire_password@localhost:5432/redfire_web
DB_HOST=localhost
DB_PORT=5432
DB_NAME=redfire_web
DB_USER=redfire
DB_PASSWORD=redfire_password

# Redis配置
REDIS_URL=redis://:redfire_redis_pass@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redfire_redis_pass
REDIS_DB=0

# JWT配置
JWT_SECRET_KEY=jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# RedFire配置
REDFIRE_DATA_PATH=/app/redfire_data
REDFIRE_LOG_PATH=/app/redfire_logs
REDFIRE_CONFIG_PATH=/app/redfire_config

# 文件上传配置
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10MB

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=/app/logs

# 安全配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# 外部服务配置
ENABLE_WEBSOCKET=true
WEBSOCKET_PATH=/ws

# 监控配置
ENABLE_METRICS=true
METRICS_PATH=/metrics

# 缓存配置
CACHE_TTL=300
ENABLE_CACHE=true